<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/planbuilder1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlenoback"
    android:orientation="vertical"
    android:padding="30dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/planbuilder1tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/planbuilder1"
            android:text="@string/planbuilder1"
            android:textColor="@color/white_color"
            android:textSize="@dimen/title_dimens" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/breakdownbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contentback"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="50dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pbnext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/next"
                android:text="@string/next"
                android:padding="15dip"
                android:textColor="@color/white_color"
                android:textSize="@dimen/next" />
        </LinearLayout>

</LinearLayout>