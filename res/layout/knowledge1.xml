<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/titlebox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleh"
        android:gravity="center" >

        <ImageView
            android:id="@+id/phoneimage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleh"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/phonepaper" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#60000000"
            android:gravity="center"
            android:text="@string/kb"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/title_dimens" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebox"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/kb1searchtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="72dip"
            android:gravity="center"
            android:hint="@string/kbsearchtext"
            android:text="@string/kbsearchtext"
            android:textColor="@color/txt"
            android:textSize="@dimen/body" />

        <EditText
            android:id="@+id/searchTerm"
            android:layout_width="@dimen/resultw"
            android:layout_height="@dimen/resulth"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:background="@color/primary"
            android:hint="@string/kbsearchhint"
            android:padding="@dimen/elmtspace"
            android:singleLine="true"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:textSize="@dimen/body" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/next"
        style="@style/nextbtn"
        android:layout_width="@dimen/plusminbtn"
        android:layout_height="@dimen/plusminbtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/startbtnspace"
        android:gravity="center"
        android:text="@string/arrow"
        android:textStyle="bold" />

</RelativeLayout>