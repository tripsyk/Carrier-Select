<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/carriertitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlespace"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/carriertitle"
        android:text="@string/carriertitle"
        android:textSize="@dimen/title_dimens" />

    <Button
        android:id="@+id/att"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_gravity="center"
        android:layout_marginTop="80dip"
        android:gravity="center"
        android:hint="@string/att"
        android:padding="8dip"
        android:text="@string/att"
        android:textColor="@color/white_color"
        android:textSize="@dimen/body" />

    <Button
        android:id="@+id/verizon"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_gravity="center"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:hint="@string/verizon"
        android:text="@string/verizon"
        android:textColor="@color/white_color"
        android:textSize="@dimen/body" />

    <Button
        android:id="@+id/sprint"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_gravity="center"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:hint="@string/sprint"
        android:text="@string/sprint"
        android:textColor="@color/white_color"
        android:textSize="@dimen/body" />

    <Button
        android:id="@+id/tmobile"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_gravity="center"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:hint="@string/tmobile"
        android:text="@string/tmobile"
        android:textColor="@color/white_color"
        android:textSize="@dimen/body" />

    <Button
        android:id="@+id/other"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_gravity="center"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:hint="@string/other"
        android:text="@string/other" />

</LinearLayout>