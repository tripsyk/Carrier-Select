<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlenoback"
    android:overScrollFooter="@color/white_color"
    android:overScrollHeader="@color/white_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dip" >

        <LinearLayout
            android:id="@+id/nc1titlebox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nocontract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/nocontracttitle"
                android:text="@string/nocontracttitle"
                android:textColor="@color/white_color"
                android:textSize="@dimen/title_dimens" />

            <TextView
                android:id="@+id/ncsubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/ncsubtitle"
                android:text="@string/ncsubtitle"
                android:textColor="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nocontractsubbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dip"
            android:gravity="center" >

            <TextView
                android:id="@+id/nctitlesub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/nctitlesub"
                android:text="@string/nctitlesub"
                android:textColor="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />
        </LinearLayout>

        <Spinner
            android:id="@+id/carrierspinner"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dip"
            android:background="@drawable/cbg"
            android:entries="@array/nocontractarray"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:popupBackground="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/nextnc1box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="50dip"
            android:background="@drawable/bbg"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nextnc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dip"
                android:hint="@string/next"
                android:text="@string/next"
                android:textColor="@color/white_color"
                android:textSize="@dimen/next" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>