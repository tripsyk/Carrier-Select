<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollFooter="@color/white_color"
    android:overScrollHeader="@color/white_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/contract_plans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/contract_plans"
            android:text="@string/contract_plans"
            android:textColor="@color/titlenoback"
            android:textSize="@dimen/title_dimens" />

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dip"
            android:gravity="center"
            android:hint="@string/sphone_label"
            android:textColorHint="@color/titlenoback"
            android:textSize="@dimen/subtitle_dimens" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sphone_m"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/buttonborder"
                android:gravity="center"
                android:text="@string/sphone_m"
                android:textColor="@color/titlenoback" />

            <TextView
                android:id="@+id/sphone_input"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/sstarter"
                android:text="@string/sstarter"
                android:textColor="@color/titlenoback"
                android:textSize="@dimen/planquotenum" />

            <Button
                android:id="@+id/sphone_p"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/buttonborder"
                android:gravity="center"
                android:text="@string/sphone_p"
                android:textColor="@color/titlenoback" />
        </LinearLayout>

        <TextView
            android:id="@+id/bphone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:hint="@string/bphone_label"
            android:textColor="@color/white_color"
            android:textColorHint="@color/titlenoback"
            android:textSize="@dimen/subtitle_dimens" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bphone_m"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/buttonborder"
                android:gravity="center"
                android:text="@string/bphone_m"
                android:textColor="@color/titlenoback" />

            <TextView
                android:id="@+id/bphone_input"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/bstarter"
                android:text="@string/bstarter"
                android:textColor="@color/titlenoback"
                android:textSize="@dimen/planquotenum" />

            <Button
                android:id="@+id/bphone_p"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/buttonborder"
                android:gravity="center"
                android:text="@string/bphone_p"
                android:textColor="@color/titlenoback" />
        </LinearLayout>

        <TextView
            android:id="@+id/data_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:hint="@string/data_label"
            android:textColorHint="@color/titlenoback"
            android:textSize="@dimen/subtitle_dimens" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/data_m"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/buttonborder"
                android:gravity="center"
                android:text="@string/data_m"
                android:textColor="@color/titlenoback" />

            <TextView
                android:id="@+id/data_input"
                android:layout_width="75dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/dstarter"
                android:text="@string/dstarter"
                android:textColor="@color/titlenoback"
                android:textSize="@dimen/planquotenum" />

            <Button
                android:id="@+id/data_p"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/buttonborder"
                android:gravity="center"
                android:text="@string/data_p"
                android:textColor="@color/titlenoback" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_hotspot"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:onClick="onCheck"
            android:text="@string/checkbox_hotspot"
            android:textColor="@color/titlenoback"
            android:textSize="@dimen/subtitle_dimens" />

        <TextView
            android:id="@+id/discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:hint="@string/discount_text"
            android:text="@string/discount_text"
            android:textColor="@color/titlenoback"
            android:textSize="@dimen/subtitle_dimens" />

        <SeekBar
            android:id="@+id/discount_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dis_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/dis_value"
            android:text="@string/dis_value"
            android:textColor="@color/titlenoback"
            android:textSize="@dimen/planquotenum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:paddingTop="10dip"
            android:paddingBottom="20dip" >

            <TextView
                android:id="@+id/button_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dip"
                android:gravity="center"
                android:text="@string/button_send"
                android:textColor="@color/titlenoback"
                android:textSize="@dimen/title_dimens" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>