<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlenoback"
    android:overScrollFooter="@color/white_color"
    android:overScrollHeader="@color/white_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dip" >
        
                <LinearLayout
            android:id="@+id/sptitlebox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/serviceplans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/serviceplans"
                android:text="@string/serviceplans"
                android:textColor="@color/white_color"
                android:textSize="@dimen/title_dimens" />

            <TextView
                android:id="@+id/contract_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/sp1title"
                android:text="@string/sp1title"
                android:textColor="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/smartphonebox"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:background="@drawable/contentback"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dip" >

            <TextView
                android:id="@+id/phone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/sphone_label"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/sphone_m"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_gravity="center"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />

                <TextView
                    android:id="@+id/sphone_input"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />

                <Button
                    android:id="@+id/sphone_p"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/basicphonebox"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="@drawable/contentback"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dip" >

            <TextView
                android:id="@+id/bphone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/bphone_label"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bphone_m"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />

                <TextView
                    android:id="@+id/bphone_input"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />

                <Button
                    android:id="@+id/bphone_p"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/databox"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="@drawable/contentback"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dip" >

            <TextView
                android:id="@+id/data_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/data_label"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/data_m"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />

                <TextView
                    android:id="@+id/data_input"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />

                <Button
                    android:id="@+id/data_p"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabletbox"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="@drawable/contentback"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dip" >

            <TextView
                android:id="@+id/tab_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/tab_label"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tab_m"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />

                <TextView
                    android:id="@+id/tab_input"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />

                <Button
                    android:id="@+id/tab_p"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/planquotenum" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extrasbox"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="@drawable/contentback"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dip" >

            <TextView
                android:id="@+id/extras_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/extras_label"
                android:text="@string/extras_label"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/subtitle_dimens"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkbox_hotspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:gravity="center"
                android:text="@string/checkbox_hotspot"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />

            <CheckBox
                android:id="@+id/includecarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:gravity="center"
                android:text="@string/includecarrier"
                android:hint="@string/includecarrier"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />

            <TextView
                android:id="@+id/discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:hint="@string/discount_text"
                android:text="@string/discount_text"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/subtitle_dimens" />

            <SeekBar
                android:id="@+id/discount_bar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxHeight="3dip"
                android:minHeight="3dip"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:thumb="@drawable/thumb" />

            <TextView
                android:id="@+id/dis_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:hint="@string/dis_value"
                android:text="@string/dis_value"
                android:textColor="@color/white_color"
                android:textColorHint="@color/white_color"
                android:textSize="@dimen/planquotenum" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="85dip"
            android:layout_height="55dip"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/contentback"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/button_send"
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/next"
                android:text="@string/next"
                android:textColor="@color/white_color"
                android:textSize="@dimen/title_dimens" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>