<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/serviceplans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/topbotpad"
        android:gravity="center"
        android:hint="@string/serviceplans"
        android:text="@string/serviceplans"
        android:textSize="@dimen/title_dimens" />

    <TextView
        android:id="@+id/contract_plans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/topbotpad"
        android:gravity="center"
        android:hint="@string/sp1title"
        android:text="@string/sp1title"
        android:textSize="@dimen/subtitle_dimens" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/quotetopcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/cardmarg"
        android:layout_marginLeft="@dimen/cardmarg"
        android:layout_marginRight="@dimen/cardmarg"
        android:layout_marginTop="@dimen/topcard"
        android:gravity="center"
        card_view:cardBackgroundColor="@color/white_color"
        card_view:cardCornerRadius="@dimen/cardcorner"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:contentPadding="@dimen/cardpad" >

        <LinearLayout
            android:id="@+id/quotetopbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/topbox_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/quotetop_label"
                android:text="@string/quotetop_label"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elmtspace"
                android:gravity="center"
                android:hint="@string/sphone_label"
                android:text="@string/sphone_label"
                android:textSize="@dimen/body" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/sphone_m"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:layout_gravity="center"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textSize="@dimen/title_dimens" />

                <TextView
                    android:id="@+id/sphone_input"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textSize="@dimen/title_dimens" />

                <Button
                    android:id="@+id/sphone_p"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textSize="@dimen/title_dimens" />
            </LinearLayout>

            <TextView
                android:id="@+id/bphone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elmtspace"
                android:gravity="center"
                android:hint="@string/bphone_label"
                android:text="@string/bphone_label"
                android:textSize="@dimen/body" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bphone_m"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textSize="@dimen/title_dimens" />

                <TextView
                    android:id="@+id/bphone_input"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textSize="@dimen/title_dimens" />

                <Button
                    android:id="@+id/bphone_p"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textSize="@dimen/title_dimens" />
            </LinearLayout>

            <TextView
                android:id="@+id/data_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elmtspace"
                android:gravity="center"
                android:hint="@string/data_label"
                android:text="@string/data_label"
                android:textSize="@dimen/body" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/data_m"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textSize="@dimen/title_dimens" />

                <TextView
                    android:id="@+id/data_input"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textSize="@dimen/title_dimens" />

                <Button
                    android:id="@+id/data_p"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textSize="@dimen/title_dimens" />
            </LinearLayout>

            <TextView
                android:id="@+id/tab_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elmtspace"
                android:gravity="center"
                android:hint="@string/tab_label"
                android:text="@string/tab_label"
                android:textSize="@dimen/body" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tab_m"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textSize="@dimen/title_dimens" />

                <TextView
                    android:id="@+id/tab_input"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textSize="@dimen/title_dimens" />

                <Button
                    android:id="@+id/tab_p"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textSize="@dimen/title_dimens" />
            </LinearLayout>

            <TextView
                android:id="@+id/mifi_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elmtspace"
                android:gravity="center"
                android:hint="@string/mifi_label"
                android:text="@string/mifi_label"
                android:textSize="@dimen/body" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/mifi_m"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textSize="@dimen/title_dimens" />

                <TextView
                    android:id="@+id/mifi_input"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:text="@string/zero"
                    android:textSize="@dimen/title_dimens" />

                <Button
                    android:id="@+id/mifi_p"
                    android:layout_width="@dimen/plusminbtn"
                    android:layout_height="@dimen/plusminbtn"
                    android:background="@drawable/circlebtn"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textSize="@dimen/title_dimens" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/extrascard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/cardmarg"
        android:layout_marginLeft="@dimen/cardmarg"
        android:layout_marginRight="@dimen/cardmarg"
        android:layout_marginTop="@dimen/cardgut"
        android:gravity="center"
        card_view:cardBackgroundColor="@color/white_color"
        card_view:cardCornerRadius="@dimen/cardcorner"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:contentPadding="@dimen/cardpad" >

        <LinearLayout
            android:id="@+id/extrasbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/extras_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/extras_label"
                android:text="@string/extras_label"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/twoyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elmtspace"
                android:gravity="center"
                android:hint="@string/contractpricing"
                android:text="@string/contractpricing"
                android:textColor="@color/txt"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elmtspace"
                android:gravity="center"
                android:hint="@string/discount_text"
                android:text="@string/discount_text"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/dis_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elmtspace"
                android:gravity="center"
                android:hint="@string/dis_value"
                android:text="@string/dis_value"
                android:textSize="@dimen/body" />

            <SeekBar
                android:id="@+id/discount_bar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/topbotpad"
                android:layout_marginTop="@dimen/elmtspace"
                android:maxHeight="3dip"
                android:minHeight="3dip"
                android:progressDrawable="@drawable/progressbar"
                android:thumb="@drawable/thumb" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_send"
        android:layout_width="@dimen/btnw"
        android:layout_height="@dimen/btnh"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="@dimen/btnspace"
        android:gravity="center"
        android:hint="@string/next"
        android:text="@string/next" />

</LinearLayout>