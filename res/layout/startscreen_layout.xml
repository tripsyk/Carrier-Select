<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startuplayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlenoback"
    android:orientation="vertical"
    android:padding="30dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/welcome"
            android:text="@string/welcome"
            android:textColor="@color/white_color"
            android:textSize="@dimen/title_dimens" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="175dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/next"
            android:text="@string/next"
            android:background="@drawable/contentback"
            android:padding="15dip"
            android:textColor="@color/white_color"
            android:textSize="@dimen/next" />
    </LinearLayout>

</LinearLayout>