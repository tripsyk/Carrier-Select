<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/border" >

    <LinearLayout
        android:id="@+id/homeprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/yourProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/yourProfile"
            android:text="@string/yourProfile"
            android:textColor="@color/txt"
            android:textSize="@dimen/title_dimens" />

        <TextView
            android:id="@+id/profilesubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/profsubtitle"
            android:text="@string/profsubtitle"
            android:textColor="@color/txt"
            android:textSize="@dimen/subtitle_dimens" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profilecard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/cardmarg"
            android:layout_marginLeft="@dimen/cardmarg"
            android:layout_marginRight="@dimen/cardmarg"
            android:layout_marginTop="@dimen/topcard"
            android:gravity="center"
            card_view:cardBackgroundColor="@color/white_color"
            card_view:cardCornerRadius="@dimen/cardcorner"
            card_view:cardElevation="@dimen/card_elevation"
            card_view:contentPadding="@dimen/cardpad" >

            <LinearLayout
                android:id="@+id/attplanbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/carrierbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/carriertitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/profilecarrier"
                        android:text="@string/profilecarrier"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/yourcarrier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/notset"
                        android:text="@string/notset"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/smartphonesbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/numsmartphonespre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/profilesmart"
                        android:text="@string/profilesmart"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/numsmartphones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/notset"
                        android:text="@string/notset"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/basicphonesbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/numbasicphonespre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/profilebasic"
                        android:text="@string/profilebasic"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/numbasicphones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/notset"
                        android:text="@string/notset"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/databox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/datapre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/profilegigs"
                        android:text="@string/profilegigs"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/gigsofdata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/notset"
                        android:text="@string/notset"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabletbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tabletpre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/profiletablets"
                        android:text="@string/profiletablets"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/numtablets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/notset"
                        android:text="@string/notset"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mifibox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/mifipre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/profilemifi"
                        android:text="@string/profilemifi"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/nummifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/notset"
                        android:text="@string/notset"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discountbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/discountpre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/profilediscount"
                        android:text="@string/profilediscount"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/numdiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/notset"
                        android:text="@string/notset"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />
                </LinearLayout>

                <TextView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/lineblue"
                    android:gravity="center"
                    android:hint=""
                    android:text="" />

                <LinearLayout
                    android:id="@+id/monthlybox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/monthlybillpre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/profilemonthly"
                        android:text="@string/profilemonthly"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/monthlybill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="@string/notset"
                        android:text="@string/notset"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/body" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/editprofile"
            android:layout_width="@dimen/btnw"
            android:layout_height="@dimen/btnh"
            android:layout_gravity="center"
            android:layout_marginBottom="16dip"
            android:layout_marginTop="16dip"
            android:background="@color/accent"
            android:gravity="center"
            android:hint="@string/editprofile"
            android:text="@string/editprofile"
            android:textColor="@color/white_color" />
    </LinearLayout>

</ScrollView>