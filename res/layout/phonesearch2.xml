<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/titlebox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleh"
        android:gravity="center" >

        <ImageView
            android:id="@+id/phoneimage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleh"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/phones" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#60000000"
            android:gravity="center"
            android:text="@string/phonesearch"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/title_dimens" />
    </FrameLayout>

    <TextView
        android:id="@+id/ps2subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebox"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/topbotpad"
        android:gravity="center"
        android:text="@string/ps2subtitle"
        android:textSize="@dimen/body" />

    <TextView
        android:id="@+id/ps2resultstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ps2subtitle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/blankstring"
        android:textSize="@dimen/body"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ps21"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_below="@id/ps2resultstitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/elmtspace"
        android:gravity="center"
        android:text="@string/loadingphone" />

    <Button
        android:id="@+id/ps22"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_below="@id/ps21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/contentspace"
        android:gravity="center"
        android:text="@string/loadingphone" />

    <Button
        android:id="@+id/ps23"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_below="@id/ps22"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/contentspace"
        android:gravity="center"
        android:text="@string/loadingphone" />

    <Button
        android:id="@+id/ps24"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_below="@id/ps23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/contentspace"
        android:gravity="center"
        android:text="@string/loadingphone" />

    <Button
        android:id="@+id/ps25"
        android:layout_width="@dimen/resultw"
        android:layout_height="@dimen/resulth"
        android:layout_below="@id/ps24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/contentspace"
        android:gravity="center"
        android:text="@string/loadingphone" />

</RelativeLayout>