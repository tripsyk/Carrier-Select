<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlenoback"
    android:overScrollFooter="@color/white_color"
    android:overScrollHeader="@color/white_color" >

    <LinearLayout
        android:id="@+id/pb3basics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dip" >

        <TextView
            android:id="@+id/pb3title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:hint="@string/pb3title"
            android:text="@string/pb3title"
            android:textColor="@color/white_color"
            android:textSize="@dimen/title_dimens" />

        <LinearLayout
            android:id="@+id/pb3box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/pb3unlbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dip"
                android:background="@drawable/cbg"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="15dip" >

                <TextView
                    android:id="@+id/pb3unl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/unlimited"
                    android:text="@string/unlimited"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/title_dimens"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pb3unldesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/unlimmindesc"
                    android:text="@string/unlimmindesc"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/desc_dimens" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pb3limbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dip"
                android:background="@drawable/cbg"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="15dip" >

                <TextView
                    android:id="@+id/pb3lim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/limited"
                    android:text="@string/limited"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/title_dimens"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pb3limdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/limmindesc"
                    android:text="@string/limmindesc"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/desc_dimens" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>